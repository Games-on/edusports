{
  "info": {
    "name": "EduSports Team Management APIs",
    "description": "Collection for testing Team Management APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "3.1 Get Teams by Tournament",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tournaments/1/teams",
          "host": ["{{base_url}}"],
          "path": ["api", "tournaments", "1", "teams"]
        }
      }
    },
    {
      "name": "3.2 Get Team by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/teams/1",
          "host": ["{{base_url}}"],
          "path": ["api", "teams", "1"]
        }
      }
    },
    {
      "name": "3.3 Register Team for Tournament",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"teamName\": \"Team Gamma\",\n  \"teamColor\": \"#00FF00\",\n  \"memberCount\": 4,\n  \"contactInfo\": \"gamma@example.com\",\n  \"logoUrl\": \"https://example.com/logo-gamma.png\",\n  \"notes\": \"Đội chúng tôi có kinh nghiệm thi đấu 2 năm\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tournaments/1/register",
          "host": ["{{base_url}}"],
          "path": ["api", "tournaments", "1", "register"]
        }
      }
    },
    {
      "name": "3.4 Update Team",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Team Gamma Updated\",\n  \"teamColor\": \"#0000FF\",\n  \"memberCount\": 6,\n  \"contactInfo\": \"gamma-updated@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/teams/3",
          "host": ["{{base_url}}"],
          "path": ["api", "teams", "3"]
        }
      }
    },
    {
      "name": "3.5 Delete Team",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/teams/3",
          "host": ["{{base_url}}"],
          "path": ["api", "teams", "3"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "access_token",
      "value": "your_jwt_token_here"
    }
  ]
}
